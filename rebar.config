{deps,[
    % IPinfo returns all results in JSON, and jiffy's a fast JSON parser.
    {jiffy, {git, "git://github.com/davisp/jiffy.git", {tag, "1.0.1"}}}
]}.

{profiles, [
    {test, [
        {erl_opts, [nowarn_export_all]}
    ]}
]}.

% http://erlang.org/doc/man/compile.html
{erl_opts, [
    encrypt_debug_info,
    warn_bif_clash,
    warn_deprecated_function,
    warn_deprecated_type,
    warn_export_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_unused_function,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warnings_as_errors
]}.

{xref_checks, [
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{alias, [
    {check, [xref, dialyzer]}
]}.
